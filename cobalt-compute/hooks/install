-----END PGP PUBLIC KEY BLOCK-----
EOF

# Reduce LSB to shipping variants
[ $(lsb_release -cs) == "precise" -o $(lsb_release -cs) == "quantal" ] && RELEASE="precise" || RELEASE="raring"

# Generate our package lists.
cat > /etc/apt/sources.list.d/cobalt-compute.list <<EOF
deb $(config-get base-uri)/$(config-get cobalt-key)/$(config-get os-version)/$RELEASE/ gridcentric multiverse
deb $(config-get base-uri)/$(config-get vms-key)/vms/$RELEASE/ gridcentric multiverse
EOF

# Install the software.
apt-get update
apt-get install -y -o Dpkg::Options::="--force-confdef" vms-qemu-$RELEASE vms-$(get-config compute-type) vms-mcdist vms-rados cobalt-compute
